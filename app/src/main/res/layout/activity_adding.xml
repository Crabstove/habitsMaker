<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddingActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make it simple to make it real"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter a habit"
        android:inputType="textPersonName" />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_build"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUILD"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIT"/>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or select one of our recommendations:"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <ListView
        android:id="@+id/listViewRecommendations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"/>
</LinearLayout>